# -*- coding: utf-8 -*-
# vim: ft=yaml
---
# the client code can use the settings from a salt mine if you set this up
# This is not optional but mandatory
mine_functions:
  velociraptor_client_settings:
    - mine_function: grains.get
    - velociraptor

# both chunks are recursively merged into the configuration file so you can set any setting you want
velociraptor:
  # disabled by default
  use_apparmor: False
  # disabled by default. requires velociraptor-auto-rotate-keys package
  use_automatic_key_rotation: False
  # used for accessing salt mine
  server_address: velociraptor.example.com
  server_self_monitor: True
  ca_certificate: /usr/share/pki/trust/anchors/filename.pem
  client:
    # default profile, can be set to restricted
    apparmor_profile: unrestricted
    config:
      Client:
        server_urls:
          - https://velociraptor.example.com:8000/
  server:
    config:
      Frontend:
        bind_address: 127.0.0.1
        tls_certificate_filename: /etc/ssl/services/velociraptor.example.com.with.chain.pem.ecdsa
        tls_private_key_filename: /etc/ssl/services/velociraptor.example.com.with.chain.pem.ecdsa
        proxy_header: X-Forwarded-For
    users:
      salt:
        role: api
        grants:
          - any_query
          - read_results
          - collect_client
          - collect_server
      guest:
         role: reader
         password: password
         grants: {}
    users_config:
      fileowner: "velociraptor"
      userspath: "/var/lib/velociraptor/data/users/"
      aclpath: "/var/lib/velociraptor/data/acl/"
    artifacts:
      server:
        LogScale.Events.Clients:
          ingestApiBase: https://humio.test.com/api
          ingestToken: token
          tagFields: ClientId
          numThreads: 1
          httpTimeout: 10
          batchingTimeoutMs: 30000
          eventBatchSize: 2000
          statsInterval: 600
          Artifacts:
            - Linux.Events.ProcessExecutions  
        LogScale.Flows.Upload:
          ingestApiBase: https://humio.test.com/api
          ingestToken: token
          tagFields: ClientId
          numThreads: 1
          httpTimeout: 10
          batchingTimeoutMs: 30000
          eventBatchSize: 2000
          statsInterval: 600  
      client:
        Linux.Events.ProcessExecutions:  {}
